extends layout.pug

block content
    if errors
        p The following errors were found:
            ul
                each error in errors
                    li #{error}
    h2 Create User
    form(method="post" action="/create-interesting")
        input(type="hidden" name="_csrf" value="csrfToken")
        label(for="firstName") First Name
        input(type="text" id="firstName" name="firstName" value=firstName)
        label(for="lastName") Last Name
        input(type="text" id="lastName" name="lastName" value=lastName)
        label(for='age') Age
        input(type='number' id='age' name='age' value=age)
        label(for="email") Email
        input(type="email" id="email" name="email" value=email)
        label(for="password") Password
        input(type="password" id="password" name="password" value=password)
        label(for="confirmedPassword") Confirmed Password
        input(type="password" id="confirmedPassword" name="confirmedPassword")
        label(for='favoriteBeatle') Favorite Beatle
        select(type='select' placeholder='Select Favorite Beatle' id='favoriteBeatle' name='favoriteBeatle' value='--Please choose an option--' ) --Please choose an option--
            option(value='') --Please choose an option--
            option(value='Paul') Paul
            option(value='Ringo') Ringo
            option(value='John' selected='selected') John
            option(value='George') George
            option(value='Scooby-Doo') Scooby-Doo
        label(for='iceCream') Likes ice cream
        input(type='checkbox' id='iceCream' name='iceCream' checked=true)
        input(type="submit" value="Create Interesting User")
